    <style>
        .row {
            text-align: center;
            margin: 0 auto;
        }

        .row .col-lg-4 {
            display: inline-block;
            vertical-align: middle;
            float: none;
        }
    </style>

    <div class="container mx-auto w-50 text-center pt-5">
        <h1 class="text-center">Clientes</h1>

        <div class="card w-56 border border-primary text-center mx-auto mt-5">
            <div class="card-body">
                <div class="card-title">
                    Cadastre um novo cliente
                </div>
                <%= link_to "Clique aqui", new_client_path, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
    <h2 class="text-center mx-auto pt-5 pb-2"> Todos os clientes cadastrados: </h2>
    <div class="container border border p-5 ">
        <div class="row justify-content-center mx-4">
            <% @clients.each do |client|%>
            <div class="col-lg-4">
                <%= link_to client.name, client%>
                <p class="text-normal mb-4">Documento: <span style="color: red"> <%= client.document %> </span> </h2>
            </div>
            <% end %>
        </div>
        <div class="digg_pagination mt-4">
            <%= paginate @clients  %>

        </div>
    </div>
    </div>