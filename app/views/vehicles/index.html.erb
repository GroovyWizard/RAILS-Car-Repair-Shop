            <div class="jumbotron mx-auto text-center my-4 border border-dark mx-auto">
            <div class="d-flex flex-wrap  rounded text-center mx-auto p-5">
             <% @vehicles.each do |vehicle| %>
                 <div class="card0  mx-auto card p-3 mx-5 my-5 border-dark rounded" id="card" style="width: 18rem;">
                     <h2 class="card-text">Modelo: <%= vehicle.model %> </h2>
