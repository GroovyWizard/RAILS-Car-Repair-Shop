<style>
    .row {
        text-align: center;
        margin: 0 auto;
    }

    .row .col-lg-4 {
        display: inline-block;
        vertical-align: middle;
        float: none;
    }
</style>



<div class="container mx-auto w-50 text-center pt-5">
    <h1 class="text-center">Veículos</h1>

    <div class="card w-56 border border-primary text-center mx-auto mt-5">
        <div class="card-body">
            <div class="card-title">
                Cadastre um novo veículo
            </div>
            <%= link_to "Clique aqui", new_vehicle_path, class: "btn btn-primary" %>
        </div>
    </div>
</div>
<h2 class="text-center mx-auto pt-5 pb-2"> Todos os Veículos cadastrados: </h2>
<div class="container border border p-5">
        <div class="row justify-content-center mx-4">
            <% @vehicles.each do |vehicle|%>
            <div class="col-lg-4">
                <%= link_to vehicle.model, vehicle%>
                <p class="text-normal mb-4">Placa: <span style="color: red"> <%= vehicle.registration_plate %></span>
            </div>
            <% end %>
        </div>
        <div class="digg_pagination mt-4">
            <%= paginate @vehicles %>
        </div>
    </div>
</div>