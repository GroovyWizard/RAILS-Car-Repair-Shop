<h1> Valor da mão de obra: <%= @service.value %> </h1>


<h2 class="text-center p-2"> Tarefas realizadas neste serviço: </h2>
  <table class="table">
    <thead> 
      <tr>
        <th scope="col"> # </th>
        <th scope="col"> Nome </th>
        <th scope="col"> Modelo  </th>
        <th scope="col"> Valor </th>
      </tr>
    </thead>
    <tbody>
      <% @service.tasks.each do |task| %>
        <tr>
        <% if task %>
          <td>
            <%= task.id %>
          </td>
          <td>
            <%= task.title %>
          </td>
          <td>
            <%= task.description %>
          </td>
          <td>
            <%= task.status %>
          </td>
          <td>
            <%= task.estimative %>
          </td>
          <td> 
            <%= task.finish_date %>
          </td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>


  