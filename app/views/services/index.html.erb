  <div class="container mx-auto w-50 text-center pt-5">
        <h2 class="display-4 font-italic">Todos os Serviços</h1>
        <div class="card w-56 border border-primary text-center mx-auto mt-5"> 
                <div class="card-body">
                    <div class="card-title">
                        Cadastre um novo serviço
                    </div>
                    <%= link_to "Clique aqui", new_service_path, class: "btn btn-primary" %>
                </div>
            </div>
    </div>
        
    <div class="container mx-auto pt-5 mb-5 w-50">
        <h2 class="text-center p-2 mt-5"> Serviços pendentes </h2>
            <% @services.each do |service| %>
                <% if service.status == false %>
                    <%= render "services-table", service: service %>
                <% end %>  
            <% end %>


        <h2 class="text-center p-2 mt-5"> Serviços finalizados</h2>
             <% @services.each do |service| %>
                <% if service.status == true %>
                    <%= render "services-table", service: service %>
                <% end %>  
            <% end %>

     
    </div>
