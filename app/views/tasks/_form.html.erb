        <%= form_for [@service, @service.tasks.build] do |form| %>               
               <div class="form-group pt-2">
                    <%= form.label :title %>
                    <%= form.text_field :title, class: "form-control", id: 'autocomplete12', placeholder: "Escreva o titulo" %>
               </div>

               <div class="form-group pt-2">
                    <%= form.label :description %>
                    <%= form.text_area :description, {class: "form-control", placeholder: "Insira a descrição da tarefa"} %>
                </div>
                
                 <div class="form-group pt-2">
                    <%= form.label :estimative, value: "Estimativa:" %> 
                    <%= form.date_field :estimative, {class: "form-control", placeholder: "Selecione uma estimativa para o serviço"} %>
                </div>

                <div class="form-group py-2.5">
                    <%= form.label :status, value: "A tarefa ja havia sido concluida?" %> 
                    <%= form.check_box :status%>            
                </div>
    
               <div class="lead pt-5">
                <%= form.submit "Concluir", class: "btn btn-primary" %>
              </div>
        <% end %>
<%= form_tag(tasks_path, method: 'get', class: "form-inline") do %>
  <div id= "search-data" class="form-search search-data" data-skills="<%= @tasks.to_json %>">
  </div>
<% end %>


    
