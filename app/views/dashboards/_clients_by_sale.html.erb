<div class="col-12 col-xl-8 mb-4 mb-lg-0">
<div class="card">
    <h5 class="card-header text-primary">Relatorio de Clientes por Quantia de Orçamentos</h5>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Documento</th></th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Orçamentos</th>
                    <th scope="col">Data</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @clients_by_sale.each do |client| %>
                    <tr>
                        <th scope="row"> <%= client.id %></th>
                        <td><%= client.name%></td>
                        <td><%= client.document %> </td>
                        <td><%= client.phone %></td>
                        <td><%= client.sales.count %></td>
                        <td><%= client.created_at.to_date %></td>
                        <td> <%= link_to "Ver", client, class: "btn btn-primary" %> </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
        </div>
        <div class="digg_pagination mt-4">
            <%= paginate @clients_by_sale  %>
        </div>
          
        </div>
        </div>
    </div>